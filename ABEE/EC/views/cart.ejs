<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Homepage</title>
    <style>
      body{
        background-color: rgb(238, 236, 236);
      }
      .box{
        background: white;
        height:280px;
        width:200px;
        margin-left: 8%;
        margin-top: 5%;
        border:2px solid black;
        
        
      }
      .container{
        
        width: 100%;
        height: 10%;
        flex-wrap: wrap;
      }

      .pr{
        text-decoration: line-through;
      }
      a{
        text-decoration: none;
        color:black;
      }
     
    </style>
  </head>
  <body>
   
      <div class="container"> 
    <% results.forEach((result)=>{ %>
    <div class="box">
      <center>
          <a href="details/<%=result.id%>"><h3><%=result.name%></h3></a>
          
          
          <br>
          <span><b><%=result.sale_price%></b></span><br>
          <a href="delCart/<%=result.id%>"><button type="button" >Remove</button></a>
          <a href="checkout/<%=result.p_id%>"><button type="button" >BuyNow</button></a>
      <center>
    </div>
    
<%})%>
      </div>
  </body>
</html>
